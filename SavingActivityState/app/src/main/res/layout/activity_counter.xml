<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".statesimple.SimpleState5Activity">

    <TextView
        android:id="@+id/counter_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="56sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:text="0"
        android:textColor="@color/purple_700"
        android:gravity="center"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/increment_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/increment_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Increment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/counter_text_view"
        app:layout_constraintBottom_toTopOf="@id/random_color_button"/>

    <Button
        android:id="@+id/random_color_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Random Color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/increment_button"
        app:layout_constraintBottom_toTopOf="@id/switch_visibility_button"/>

    <Button
        android:id="@+id/switch_visibility_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Switch Visibility"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/random_color_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>